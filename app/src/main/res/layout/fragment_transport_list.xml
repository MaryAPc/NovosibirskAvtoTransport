<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/fragment_container"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.novosibavto.novosibavtotransport.TransportListFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/spinner_hint_textview"
            android:padding="@dimen/activity_horizontal_margin"/>
        <Spinner
            android:id="@+id/transport_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ListView
            android:id="@+id/marsh_list_view"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"/>
        <Button
            android:id="@+id/go_to_map_button"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:text="@string/go_to_map"
            android:layout_weight="1"
            android:layout_gravity="end"/>
    </LinearLayout>

</FrameLayout>
